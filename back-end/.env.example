# Application Configuration
NODE_ENV=development
APP_NAME=private-mailhub
APP_DOMAIN=private-mailhub.com
PORT=8080

# Database Configuration (MariaDB)
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Verification Code Configuration
VERIFICATION_CODE_EXPIRATION=300000
VERIFICATION_CODE_MAX_ATTEMPTS=3

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# AWS Services Configuration
AWS_S3_EMAIL_BUCKET=your-s3-bucket-name
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SQS_QUEUE_NAME=your-sqs-queue-name
AWS_SQS_QUEUE_URL=https://sqs.region.amazonaws.com/account-id/queue-name

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
